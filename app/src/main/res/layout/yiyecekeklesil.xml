<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87d4c5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".YiyecekEkleSil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/yiyecekeklesilscroll"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/kenarlik"
                android:gravity="center|top"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:text="Düzenleme İşlemi"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#b83b5e"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/butSecSil"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:background="#ffeadb"
                    android:text="Yiyecek Seç" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center|right"
                        android:text="Düzenlenen Yiyecek Adı"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/duzenlenenAdText"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:digits="0123456789abcçdefgğhıijklmnoöprsştuüvyzqwx ABCÇDEFGĞHIİJKLMNOÖPRSŞTUÜVYZQWX"
                        android:hint="Yiyecek adını giriniz..."
                        android:maxLength="30" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:text="Düzenlenen Yiyecek Gram"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/duzenlenenGramText"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:digits="0123456789"
                        android:hint="1 Pay İçin Gramajı Giriniz..."
                        android:inputType="numberDecimal"
                        android:maxLength="4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/butDuzenle"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:background="#aaaaaa"
                        android:text="Düzenle" />
                    <Button
                        android:id="@+id/butSil"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="#aaaaaa"
                        android:text="Sil" />

                </LinearLayout>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:text="Yiyecek Kayıt İşlemi"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#b83b5e"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:text="Yiyecek Adı"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/adText"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:digits="0123456789abcçdefgğhıijklmnoöprsştuüvyzqwx ABCÇDEFGĞHIİJKLMNOÖPRSŞTUÜVYZQWX"
                        android:hint="Yiyecek adını giriniz..."
                        android:maxLength="30" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="47dp"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center"
                        android:text="Gram"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/gramText"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:digits="0123456789"
                        android:hint="1 Pay İçin Gramajı Giriniz..."
                        android:inputType="numberDecimal"
                        android:maxLength="4" />
                </LinearLayout>

                <Button
                    android:id="@+id/butKaydet"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"

                    android:background="#aaaaaa"
                    android:text="Kaydet" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="40dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
