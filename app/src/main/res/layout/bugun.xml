<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="#87d4c5"
    tools:context=".Bugun">

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/butSec"
        android:background="#ffeadb"
        android:layout_margin="5dp"
        android:text="Yiyecek Seç" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Pay Değeri"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="match_parent"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/payGir"
            android:hint="Kaç Pay Gir"
            android:inputType="number"
            android:digits="0123456789."
            android:maxLength="6"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:textColor="#712"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Gram Değeri"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="match_parent"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:maxLength="7"
            android:id="@+id/gramGir"
            android:inputType="number"
            android:digits="0123456789."
            android:hint="Kaç Gram Gir"
            android:textColor="#712"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/butEkle"
            android:background="#f7c5a8"
            android:text="Ekle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#712"
        android:textStyle="bold"
        android:id="@+id/detay"
        android:layout_margin="14dp"
        android:gravity="center|left"
        android:textSize="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="İSİM"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="40dp"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="PAY"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="40dp"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="GRAM"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="40dp"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <ListView
        android:layout_margin="2dp"
        android:padding="3dp"
        android:id="@+id/liste"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/kenarlik"
         />

</LinearLayout>