<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#87d4c5"
    android:gravity="center"
    android:fillViewport="true"
    android:padding="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="100dp"
        android:text="Gonderilecek Ip Adresini Giriniz."
        android:gravity="center"
        android:textColor="#a55"
        android:layout_height="match_parent"/>
    <EditText
        android:layout_width="200dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/ipedit"
        android:layout_height="60dp"/>
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_height="60dp"
        android:id="@+id/kayitgonder"
        android:text="Kayıtları Gönder"/>
    <Button
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_height="60dp"
        android:id="@+id/kayital"
        android:text="Kayıt Alma Moduna Geç"/>

</LinearLayout>